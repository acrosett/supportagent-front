# Shared map for WebSocket connections (used by API)
map $http_upgrade $connection_upgrade {
  default upgrade;
  '' close;
}

# --- API (api.directsupport.ai) ---
server {
  listen 80;
  server_name api.directsupport.ai;

  # Proxy to your backend container/service (NodeJS)
  location / {
    include /etc/nginx/snippets/api_active.conf;  # sets proxy_pass
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto https;
    proxy_read_timeout 3600s;
    proxy_send_timeout 3600s;
    proxy_buffering off;
  }
}

# --- APP (app.directsupport.ai) ---
server {
  listen 80;
  server_name app.directsupport.ai;

  root /var/www/app;
  index index.html;

  location = /embed.js {
    return 301 https://cdn.directsupport.ai/embed.js;
  }

    # Test chat iframe with CSP
  location = /test-chat {
    add_header Cache-Control "public, max-age=60";
    add_header Content-Security-Policy "frame-ancestors *";
    try_files $uri $uri/ /index.html;
  }

  # Landing files on app domain
  location /landing/ {
    add_header Cache-Control "public, max-age=60";
    try_files $uri =404;
  }

  # Nuxt static files
  location /_nuxt/ {
    expires 1y;
    add_header Cache-Control "public, immutable";
    try_files $uri =404;
  }

  # SPA routing
  location / {
    add_header Cache-Control "public, max-age=60";
    try_files $uri $uri/ /index.html;
  }
}

# --- CDN (cdn.directsupport.ai) ---
server {
  listen 80;
  server_name cdn.directsupport.ai;

  root /var/www/app;

  location = /embed.js {
    add_header Cache-Control "public, max-age=300, stale-while-revalidate=86400";
    try_files $uri =404;
  }

  location = /embed.js.map { try_files $uri =404; }

  location / { return 404; }
}

# --- Landing site (directsupport.ai) ---
server {
  listen 80;
  server_name directsupport.ai;

  root /var/www/app;

  # Static landing files
  location = /             { try_files /landing/index.html =404; }
  location = /privacy.html { try_files /landing/privacy.html =404; }
  location = /terms.html   { try_files /landing/terms.html =404; }

  # Landing assets
  location /landing/ {
    add_header Cache-Control "public, max-age=60";
    try_files $uri =404;
  }

  # Fallback for other routes
  location / {
    try_files $uri $uri/ /index.html;
  }
}
